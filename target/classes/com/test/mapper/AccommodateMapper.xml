<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.mapper.AccommodateMapper">
	<!--  select 태그 -->
	
	<select id="accommodatelist" resultType="com.test.domain.AccommodateDTO">
      select * from tblAccommodate
   </select>
   
   <select id="accomodatecategorycount" resultType="com.test.domain.AccommodateDTO">
   		SELECT COUNT(*) FROM tblAccommodate WHERE type = '호텔'
   </select>
   
   <select id="get" resultType="com.test.domain.AccommodateDTO" parameterType="String">
   	select * from tblAccommodate where acco_seq = #{acco_seq}
   </select>
   
	<select id="view" resultType="com.test.domain.RoomDTO" parameterType="String">
		select * from tblRoom where acco_seq = #{acco_seq}
	</select>   
   
   
</mapper>



